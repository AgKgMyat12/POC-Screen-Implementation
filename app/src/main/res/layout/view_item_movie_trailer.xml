<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="260dp"
    android:layout_height="200dp"
    android:background="@color/black_full"
    android:layout_marginRight="@dimen/margin_small"
    android:layout_marginLeft="@dimen/margin_medium_2">

    <ImageView
        android:id="@+id/trailer_movie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/movie_trailer" />

    <ImageView
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:src="@drawable/ic_play_circle_outline_24dp"
        android:tint="@color/white_full"
        android:alpha="0.77"
        android:layout_alignLeft="@id/trailer_movie"
        android:layout_alignRight="@id/trailer_movie"
        android:layout_centerVertical="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Official Trailer"
        android:textColor="@color/white_full"
        android:fontFamily="sans-serif-condensed"
        android:textSize="@dimen/text_regular_2x"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/margin_medium"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Trailer"
        android:textColor="@color/white_full"
        android:fontFamily="sans-serif-condensed"
        android:textSize="@dimen/text_regular_2x"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/margin_medium"
        android:layout_marginBottom="4dp"/>
</RelativeLayout>